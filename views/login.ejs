<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Login | Logo Maker</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(120deg, #4e54c8, #8f94fb);
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }
    .logo-title {
        color: #fff;
        font-size: 2rem;
        margin-bottom: 1.5rem;
    }
    .logo-title a {
        color: #fff;
        text-decoration: none;
    }
    .login-container {
      background: #fff;
      padding: 2.5rem;
      border-radius: 12px;
      width: 100%;
      max-width: 400px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
      text-align: center;
    }
    .login-container h2 {
      margin-bottom: 1.5rem;
      color: #4e54c8;
    }
    .form-group {
      margin-bottom: 1rem;
      text-align: left;
    }
    .form-group label {
      display: block;
      font-weight: 600;
      margin-bottom: 5px;
    }
    .form-group input {
      width: 100%;
      padding: 12px;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 1rem;
      box-sizing: border-box;
    }
    .form-group input:focus {
      border-color: #4e54c8;
      outline: none;
      box-shadow: 0 0 5px rgba(78, 84, 200, 0.5);
    }
    .btn {
      display: block;
      width: 100%;
      padding: 12px;
      background: #4e54c8;
      color: #fff;
      font-size: 1rem;
      font-weight: bold;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      margin-top: 1rem;
      transition: 0.3s;
    }
    .btn:hover {
      background: #3b40a4;
    }
    .extra-links {
      margin-top: 1.5rem;
      font-size: 0.9rem;
    }
    .extra-links a {
      color: #4e54c8;
      text-decoration: none;
      font-weight: 500;
    }
    .extra-links a:hover {
      text-decoration: underline;
    }
    body { margin: 0; padding: 0; font-family: "Segoe UI", sans-serif; background: linear-gradient(120deg, #4e54c8, #8f94fb); height: 100vh; display: flex; justify-content: center; align-items: center; flex-direction: column; }
    .logo-title { color: #fff; font-size: 2rem; margin-bottom: 1.5rem; }
    .logo-title a { color: #fff; text-decoration: none; }
    .login-container { background: #fff; padding: 2.5rem; border-radius: 12px; width: 100%; max-width: 400px; box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2); text-align: center; }
    .form-group { margin-bottom: 1rem; text-align: left; }
    .form-group label { display: block; font-weight: 600; margin-bottom: 5px; }
    .form-group input { width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 8px; font-size: 1rem; box-sizing: border-box; }
    .btn { display: block; width: 100%; padding: 12px; background: #4e54c8; color: #fff; font-size: 1rem; font-weight: bold; border: none; border-radius: 8px; cursor: pointer; margin-top: 1rem; }
    .extra-links { margin-top: 1.5rem; font-size: 0.9rem; }
    .extra-links a { color: #4e54c8; text-decoration: none; }
  </style>
</head>
<body>
    <h1 class="logo-title"><a href="/">Logo Maker</a></h1>
    <div class="login-container">
        <h2>Login to Your Account</h2>
        
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" required placeholder="Enter your email" />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required placeholder="Enter your password" />
            </div>
            <button type="submit" class="btn">Login</button>
        </form>

        <div class="extra-links">
            <p>Don't have an account? <a href="/register">Register</a></p>
        </div>
    </div>

  <script>
    // NOTE: This is a temporary, frontend-only login for demonstration.
    // A real application needs a backend route to handle logins securely.
    document.getElementById("loginForm").addEventListener("submit", function (e) {
      e.preventDefault(); // prevent default form submission

      const email = document.getElementById("email").value.trim();
      const password = document.getElementById("password").value.trim();

      if (!email || !password) {
        alert("Please fill in all fields.");
        return;
      }

      // On successful "login", redirect to the homepage.
      alert("Login successful! Redirecting to homepage.");
      window.location.href = "/"; // Redirect to the main page
    });

    const urlParams = new URLSearchParams(window.location.search);
    const errorMsg = urlParams.get('error');
    
    if (errorMsg) {
        const errorDiv = document.getElementById('error-message');
        errorDiv.innerText = "⚠️ " + errorMsg;
    }
  </script>
</body>
</html>